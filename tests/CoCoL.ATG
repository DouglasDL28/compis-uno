COMPILER MyCOCOR

CHARACTERS

ANY = CHR(0)..CHR(255).
letter= "ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz".
digit= "0123456789".
cr = CHR(13).
lf = CHR(10).
tab = CHR(9).
ignore = cr+lf+tab+CHR(32).
quote = CHR(34).
apostrophe = CHR(39).
anyButQuote = ANY-quote-ignore.
anyButApostrophe = ANY-apostrophe-ignore.

operadores ="+-=()[]{}|.<>".
MyANY = ANY-operadores.

TOKENS

ident = letter{letter|digit}.
number = digit{digit}.
string = quote anyButQuote{anyButQuote} quote.
char = apostrophe anyButQuote apostrophe.
charnumber = "CHR("digit{digit}")".
interval = "..".
operator=operadores.
startAttribute = "<.".
endAttribute = ".>".
startSemAction = "(.".
endSemAction = ".)".

nontoken = MyANY.

IGNORE ignore.


END MyCOCOR.